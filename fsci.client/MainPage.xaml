<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fsci.client.MainPage">

    <Grid RowDefinitions="Auto, *" Padding="10">
        <!-- First Row: Label and Entry -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Label -->
        <Label Text="Command:" 
               VerticalOptions="Center" 
               HorizontalOptions="Start" 
               Grid.Column="0" />

        <!-- TextField (Entry) -->
        <Entry x:Name="CommandInput" 
               Placeholder="Enter your command here" 
               VerticalOptions="Center" 
               HorizontalOptions="FillAndExpand" 
               Grid.Column="1" />

        <!-- Second Row: Read-only Scrollable TextArea -->
        <ScrollView Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0" Margin="0,10,0,0">
            <Editor x:Name="OutputTextArea" 
                    IsReadOnly="True" 
                    AutoSize="TextChanges" 
                    BackgroundColor="LightGray" />
        </ScrollView>
    </Grid>
</ContentPage>
