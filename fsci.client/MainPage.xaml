<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:fsci.client.view"
             x:Class="fsci.client.MainPage">

    <Grid RowDefinitions="Auto, *" Padding="10">
        <!-- First Row: Custom CommandInputView -->
        <view:CommandInputView x:Name="CommandInputView" Grid.Row="0" />

        <!-- Second Row: Custom OutputTextView -->
        <view:OutputAreaView x:Name="OutputAreaView" Grid.Row="1" Margin="0,10,0,0" />
    </Grid>
</ContentPage>
